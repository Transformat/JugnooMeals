<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header_layout_meal_detail"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="#FFF5BE1B">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="ORDER HISTORY"
            android:textColor="#FFFFFFFF"
            android:textSize="22sp" />

        <ImageButton
            android:id="@+id/back_button_order_history_activity"
            android:layout_width="17dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back_button_white_selector"
            android:onClick="onClick" />

    </RelativeLayout>

    <ListView
        android:id="@+id/order_history_list_view"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" />


</LinearLayout>