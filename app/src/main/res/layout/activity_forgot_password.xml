<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <ImageButton
        android:id="@+id/back_button_forgot_password_activity"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/back_button_login_activity"
        android:onClick="onClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="FORGOT PASSWORD"
        android:textColor="#FF000000"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/back_button_forgot_password_activity"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/forgot_text_instruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/back_button_forgot_password_activity"
            android:layout_marginTop="30dp"
            android:text="@string/forgot_password_text"
            android:textAlignment="center"
            android:textColor="#da000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edit_email_forgot_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#FFFFFFFF"
            android:hint="Enter Email"
            android:textAlignment="center"
            android:textColor="#BB000000"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="#adffab59" />

        <Button
            android:id="@+id/request_password_forgot_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/login_button_shape_login_activity"
            android:text="REQUEST PASSWORD RESET"
            android:textColor="#FFFFFFFF"
            android:textSize="20sp" />

    </LinearLayout>
</RelativeLayout>