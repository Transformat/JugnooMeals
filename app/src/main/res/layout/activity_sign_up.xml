<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp">

    <ImageButton
        android:id="@+id/back_button_signup_activity"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/back_button_login_activity"
        android:onClick="onClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="SIGN UP"
        android:textColor="#FF000000"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/jugnoo_logo_signup"
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:layout_below="@+id/back_button_signup_activity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/jugnoo_icon_yellow" />

    <Button
        android:id="@+id/facebook_login_button_signup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/jugnoo_logo_signup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/facebook_login_button_shape"
        android:text="Sign up via Facebook"
        android:textColor="#FFFFFFFF"
        android:textSize="20sp" />


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/jugnoo_logo_signup"
        android:layout_marginTop="15dp"
        android:background="@drawable/fbicon" />

    <View
        android:layout_width="140dp"
        android:layout_height="2dp"
        android:layout_below="@+id/facebook_login_button_signup"
        android:layout_marginTop="20dp"
        android:background="#ffffab59" />

    <TextView
        android:id="@+id/or_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/facebook_login_button_signup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:text="or"
        android:textColor="#ffffab59"
        android:textSize="25sp" />

    <View
        android:layout_width="140dp"
        android:layout_height="2dp"
        android:layout_below="@+id/facebook_login_button_signup"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/or_text"
        android:background="#ffffab59" />

    <EditText
        android:id="@+id/edit_signup_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/or_text"
        android:layout_marginTop="5dp"
        android:background="#00FFFFFF"
        android:hint="Name"
        android:singleLine="true"
        android:textColorHint="#77000000"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/edit_signup_name"
        android:layout_marginTop="5dp"
        android:background="#adffab59" />

    <EditText
        android:id="@+id/edit_signup_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_signup_name"
        android:layout_marginTop="15dp"
        android:background="#00FFFFFF"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:textColorHint="#77000000"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/edit_signup_email"
        android:layout_marginTop="5dp"
        android:background="#adffab59" />

    <EditText
        android:id="@+id/edit_signup_phoneno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_signup_email"
        android:layout_marginTop="15dp"
        android:background="#00FFFFFF"
        android:hint="Phone Number"
        android:inputType="phone"
        android:singleLine="true"
        android:textColorHint="#77000000"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/edit_signup_phoneno"
        android:layout_marginTop="5dp"
        android:background="#adffab59" />

    <EditText
        android:id="@+id/edit_signup_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_signup_phoneno"
        android:layout_marginTop="15dp"
        android:background="#00FFFFFF"
        android:hint="Password"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColorHint="#77000000"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/edit_signup_password"
        android:layout_marginTop="5dp"
        android:background="#adffab59" />

    <EditText
        android:id="@+id/edit_signup_promocode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_signup_password"
        android:layout_marginTop="15dp"
        android:background="#00FFFFFF"
        android:hint="Promocode"
        android:singleLine="true"
        android:textColorHint="#77000000"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/edit_signup_promocode"
        android:layout_marginTop="5dp"
        android:background="#adffab59" />

    <TextView
        android:id="@+id/agree_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_signup_promocode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/terms_and_conditions_signup"
        android:textAlignment="center"
        android:textColor="#5f5d5d"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/terms_and_condition_clickable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/agree_text"
        android:layout_marginLeft="50dp"
        android:clickable="true"
        android:text="Terms and Conditions"
        android:textColor="@drawable/text_forgot_password_color_login_activity"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/agree_text"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/terms_and_condition_clickable"
        android:onClick="onClick"
        android:text="of Jugnoo"
        android:textColor="#5f5d5d"
        android:textSize="15sp" />

    <Button
        android:id="@+id/signup_button_signup_activity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/terms_and_condition_clickable"
        android:layout_marginTop="12dp"
        android:background="@drawable/login_button_shape_login_activity"
        android:onClick="onClick"
        android:text="SIGN UP"
        android:textColor="#FFFFFFFF"
        android:textSize="25dp" />


</RelativeLayout>