<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp">

    <ImageButton
        android:id="@+id/back_button_otp_activity"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/back_button_login_activity"
        android:onClick="onClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="VERIFICATION"
        android:textColor="#FF000000"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/otp_message"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/back_button_otp_activity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/otp_message"
        android:textAlignment="center"
        android:textColor="#5b5959"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edit_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/otp_message"
        android:layout_marginTop="50dp"
        android:background="#00FFFFFF"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:textSize="23sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/edit_otp"
        android:layout_marginTop="10dp"
        android:background="#adffab59" />

    <Button
        android:id="@+id/verification_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/edit_otp"
        android:layout_marginTop="50dp"
        android:background="@drawable/login_button_shape_login_activity"
        android:onClick="onClick"
        android:text="VERIFY ME"
        android:textColor="#FFFFFFFF"
        android:textSize="20sp" />

</RelativeLayout>